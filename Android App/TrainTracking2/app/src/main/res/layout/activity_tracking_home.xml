<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.snov.traintracking.activities.TrackingHomeActivity"
    android:background="@drawable/backgrounds">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/view_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            float:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            float:cardBackgroundColor="@color/button_background">
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="View Shared Location"
                android:textColor="#fff"
                android:textSize="12dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/share_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            float:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            float:cardBackgroundColor="@color/button_background">
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Share Train Location"
                android:textColor="#fff"
                android:textSize="12dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/request_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            float:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            float:cardBackgroundColor="@color/button_background">
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Request Train Location"
                android:textColor="#000"
                android:textSize="12dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/requested_trains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            float:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            float:cardBackgroundColor="@color/button_background">
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Requested Trains"
                android:textColor="#000"
                android:textSize="12dp"/>
        </android.support.v7.widget.CardView>






    </LinearLayout>


</RelativeLayout>
